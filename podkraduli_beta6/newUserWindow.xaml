<Window x:Class="podkraduli_beta6.newUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podkraduli_beta6"
        mc:Ignorable="d"
        Title="newUserWindow" Height="450" Width="800">
    <Grid>
        <Button Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Content="Назад" Click="Button_Click_exit"></Button>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="200">
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="Login_TextBox"></TextBox>
                       <TextBlock Text="Пароль">
                </TextBlock>
            <TextBox x:Name="Password_TextBox"></TextBox>
            <TextBlock Text="Почта"></TextBlock>
            <TextBox x:Name="Email_TextBox"></TextBox>
            
            <Button Content="Сохранить админа" Click="Save_admin_Button_Click"></Button>
            <Button Content="Сохранить пользователя" Click="Save_user_Button_Click"></Button>
        </StackPanel>  
    </Grid>
</Window>
