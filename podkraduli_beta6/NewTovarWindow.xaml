<Window x:Class="podkraduli_beta6.NewTovarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podkraduli_beta6"
        mc:Ignorable="d"
        Title="NewTovarWindow" Height="450" Width="800">
    
        <Grid>
        <Button Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Content="Назад" Click="Button_Click_exit"></Button>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="200">
                <TextBlock Text="Название"></TextBlock>
                <TextBox x:Name="TitleTextBox"></TextBox>
                <TextBlock Text="Цена">
                </TextBlock>
                <TextBox x:Name="Price_TextBox"></TextBox>
            <ComboBox x:Name="Brand_ComboBox" DisplayMemberPath="Title" Margin="0 10"></ComboBox>
            <Button Content="Сохранить" Click="Save_Button_Click"></Button>
              
            </StackPanel>
        </Grid>
    
</Window>
